<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <title>Nowe zadanie - Serwis Plik贸w</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <header class="top-bar">
      <div class="logo">Serwis Plik贸w</div>
      <nav>
        <a href="/home" class="btn">Panel g贸wny</a>
        <a href="/jobs/new" class="btn">Nowe zadanie</a>
        <a href="/jobs/history" class="btn">Historia zada</a>
        <div class="phone-number"> +48 533 193 112</div>
        <form method="post" action="/logout">
          <button type="submit" class="btn">Wyloguj</button>
        </form>
      </nav>
    </header>

    <main class="container">
      <h1>Nowe zadanie</h1>

      <section class="card">
        <h2>Przelij nowy plik</h2>
        <form method="post" action="/upload" enctype="multipart/form-data" class="aligned-form">
          <div class="form-group">
            <label>Plik <span style="color: red;">*</span></label>
            <input type="file" name="file" required />
          </div>

          <fieldset>
            <legend>Informacje o poje藕dzie</legend>
            <div class="form-row">
              <div class="form-group">
                <label>Marka pojazdu <span style="color: red;">*</span></label>
                <select name="vehicle_make" required>
                  <option value="">-- Wybierz mark --</option>
                  <option value="Audi">Audi</option>
                  <option value="BMW">BMW</option>
                  <option value="Citroen">Citroen</option>
                  <option value="Fiat">Fiat</option>
                  <option value="Ford">Ford</option>
                  <option value="Honda">Honda</option>
                  <option value="Hyundai">Hyundai</option>
                  <option value="Jaguar">Jaguar</option>
                  <option value="Kia">Kia</option>
                  <option value="Land Rover">Land Rover</option>
                  <option value="Mazda">Mazda</option>
                  <option value="Mercedes-Benz">Mercedes-Benz</option>
                  <option value="Nissan">Nissan</option>
                  <option value="Opel">Opel</option>
                  <option value="Peugeot">Peugeot</option>
                  <option value="Porsche">Porsche</option>
                  <option value="Renault">Renault</option>
                  <option value="Seat">Seat</option>
                  <option value="Skoda">Skoda</option>
                  <option value="Toyota">Toyota</option>
                  <option value="Volvo">Volvo</option>
                  <option value="Volkswagen">Volkswagen</option>
                  <option value="Inna">Inna</option>
                </select>
              </div>

              <div class="form-group">
                <label>Model pojazdu <span style="color: red;">*</span></label>
                <input type="text" name="vehicle_model" placeholder="np. A4, 320d, C220" required />
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label>Rok produkcji <span style="color: red;">*</span></label>
                <select name="vehicle_year" required>
                  <option value="">-- Wybierz rok --</option>
                  <% for (let year = 2024; year >= 1990; year--) { %>
                  <option value="<%= year %>"><%= year %></option>
                  <% } %>
                </select>
              </div>

              <div class="form-group">
                <label>Sterownik ECU <span style="color: red;">*</span></label>
                <input type="text" name="ecu_controller" placeholder="np. Bosch EDC17C70, Continental SID812, Delphi DCM6.2" required />
              </div>
            </div>
          </fieldset>

          <fieldset>
            <legend>Opcje</legend>
            <label><input type="checkbox" name="dpf_off" /> Wyczenie DPF</label>
            <label><input type="checkbox" name="egr_off" /> Wyczenie EGR</label>
            <label><input type="checkbox" name="adblue_off" /> Wyczenie AdBlue</label>
            <label><input type="checkbox" name="dtc_off" id="dtc_off" /> Wyczenie DTC</label>
            <label><input type="checkbox" name="immo_off" /> Wyczenie IMMO</label>
          </fieldset>

          <div id="dtc_codes_container" class="dtc-hidden" style="margin-top: 1rem;">
            <div class="form-group">
              <label>Kody bd贸w DTC (np. P2425, P0401, oddzielone przecinkami) <span style="color: red;">*</span></label>
              <input type="text" name="dtc_codes" id="dtc_codes" placeholder="P2425, P0401, P0402" />
              <div id="dtc_error" style="display: none; color: #b91c1c; font-size: 0.9rem; margin-top: 0.25rem;">To pole nie mo偶e by puste gdy zaznaczone jest wyczenie DTC</div>
            </div>
          </div>

          <div class="form-group">
            <label>Notatki (opcjonalnie)</label>
            <textarea name="notes" rows="3"></textarea>
          </div>

          <button type="submit" class="btn btn-primary">Wylij plik</button>
        </form>
      </section>
    </main>

    <script>
      const dtcCheckbox = document.getElementById('dtc_off');
      const container = document.getElementById('dtc_codes_container');
      const input = document.getElementById('dtc_codes');
      const errorMsg = document.getElementById('dtc_error');
      const form = document.querySelector('form');

      function validateDtcField() {
        if (dtcCheckbox.checked) {
          if (!input.value.trim()) {
            errorMsg.style.display = 'block';
            input.style.borderColor = '#b91c1c';
            return false;
          } else {
            errorMsg.style.display = 'none';
            input.style.borderColor = '#d1d5db';
            return true;
          }
        } else {
          errorMsg.style.display = 'none';
          input.style.borderColor = '#d1d5db';
          return true;
        }
      }

      dtcCheckbox.addEventListener('change', function() {
        if (this.checked) {
          container.classList.remove('dtc-hidden');
          container.classList.add('dtc-visible');
          input.focus();
        } else {
          container.classList.remove('dtc-visible');
          container.classList.add('dtc-hidden');
          input.value = '';
          errorMsg.style.display = 'none';
          input.style.borderColor = '#d1d5db';
        }
      });

      input.addEventListener('input', function() {
        if (dtcCheckbox.checked) {
          validateDtcField();
        }
      });

      form.addEventListener('submit', function(e) {
        if (dtcCheckbox.checked && !input.value.trim()) {
          e.preventDefault();
          validateDtcField();
          input.focus();
          return false;
        }
      });
    </script>
  </body>
  </html>
