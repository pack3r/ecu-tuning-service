<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <title>Admin - U≈ºytkownicy - Serwis Plik√≥w</title>
    <link rel="stylesheet" href="/tfs/styles.css" />
  </head>
  <body>
    <header class="top-bar">
      <div class="logo">Panel administracyjny</div>
      <nav>
        <a href="/tfs/admin/jobs" class="btn">Zadania</a>
        <a href="/tfs/admin/complaints" class="btn" id="complaints-btn">Reklamacje</a>
        <a href="/tfs/admin/users" class="btn">U≈ºytkownicy</a>
        <div class="phone-number">üìû +48 533 193 112</div>
        <form method="post" action="/tfs/logout">
          <button type="submit" class="btn">Wyloguj</button>
        </form>
      </nav>
    </header>

    <main class="container">
      <h1>Wszyscy u≈ºytkownicy</h1>
      <section class="card">
        <% if (!users || users.length === 0) { %>
        <p>Brak u≈ºytkownik√≥w.</p>
        <% } else { %>
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nazwa u≈ºytkownika</th>
              <th>Email</th>
              <th>Rola</th>
              <th>Akcje</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(function(user) { %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td><%= user.role %></td>
              <td>
                <a href="/tfs/admin/users/<%= user.id %>/edit" class="btn-sm">Edytuj</a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <% } %>
      </section>
    </main>
    <script>
      // Check for open problems and highlight complaints button
      function checkProblems() {
        fetch('/api/admin/open-problems')
          .then(res => res.json())
          .then(problems => {
            const complaintsBtn = document.getElementById('complaints-btn');
            if (problems.length > 0) {
              complaintsBtn.style.backgroundColor = '#dc2626';
              complaintsBtn.style.color = 'white';
              complaintsBtn.style.border = '2px solid #dc2626';
            } else {
              complaintsBtn.style.backgroundColor = '#e5e7eb';
              complaintsBtn.style.color = '#111827';
              complaintsBtn.style.border = 'none';
            }
          })
          .catch(err => console.error('Error checking open problems:', err));
      }

      checkProblems();
    </script>
  </body>
  </html>
